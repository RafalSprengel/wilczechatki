.slide.active .slide-subtitle { transition-delay: 0.4s; }
.slide.active .slide-title    { transition-delay: 0.6s; }
.slide.active .slide-topic    { transition-delay: 0.8s; }
.slide.active .slide-desc     { transition-delay: 1.0s; }
.slide.active .slide-actions  { transition-delay: 1.2s; }

